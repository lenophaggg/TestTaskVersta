@model WebApplication2.Models.Order

@{
    ViewData["Title"] = $"Заказ #{Model.Ordernumber}";
}

<h2>@ViewData["Title"]</h2>

<div class="form-group  mt-1">
    <label class="control-label">Город отправителя</label>
    <input class="form-control" value="@Model.Sendercity" readonly />
</div>

<div class="form-group  mt-1">
    <label class="control-label">Адрес отправителя</label>
    <input class="form-control" value="@Model.Senderaddress" readonly />
</div>

<div class="form-group  mt-1">
    <label class="control-label">Город получателя</label>
    <input class="form-control" value="@Model.Recipientcity" readonly />
</div>

<div class="form-group mt-1">
    <label class="control-label">Адрес получателя</label>
    <input class="form-control" value="@Model.Recipientaddress" readonly />
</div>

<div class="form-group mt-1">
    <label class="control-label">Вес груза (кг)</label>
    <input class="form-control" value="@Model.Cargoweight" readonly />
</div>

<div class="form-group mt-1">
    <label class="control-label">Дата забора</label>
    <input class="form-control" value="@Model.Pickupdate.ToString("yyyy-MM-dd")" readonly />
</div>

<div class="form-group mt-2">
    <a asp-action="List" class="btn btn-secondary">Назад к списку</a>
</div>